{
  "name": "cursor-productivity-extension",
  "displayName": "Cursor生产力助手",
  "description": "Cursor编辑器的生产力增强扩展",
  "version": "0.1.0",
  "publisher": "wwwjs",
  "engines": {
    "vscode": "^1.85.0",
    "node": ">=16.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-productivity.checkStatus",
        "title": "检查 Cursor 生产力助手状态",
        "category": "Cursor生产力助手"
      },
      {
        "command": "cursor-productivity.updateFileHeader",
        "title": "更新文件头部注释",
        "category": "Cursor生产力助手"
      },
      {
        "command": "cursor-productivity.gitCommit",
        "title": "Git自动提交",
        "category": "Cursor生产力助手"
      }
    ],
    "configuration": {
      "title": "Cursor生产力助手",
      "properties": {
        "cursor-productivity.enableAutoHeader": {
          "type": "boolean",
          "default": true,
          "description": "是否启用自动添加文件头部注释"
        },
        "cursor-productivity.autoUpdateReadme": {
          "type": "boolean",
          "default": true,
          "description": "是否自动更新README.md文件"
        },
        "cursor-productivity.gitAutoCommit": {
          "type": "boolean",
          "default": false,
          "description": "是否启用Git自动提交"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "clean": "rimraf out dist",
    "rebuild": "npm run clean && npm run compile"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/fs-extra": "^11.0.1",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.3",
    "markdown-it": "^13.0.1",
    "simple-git": "^3.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wwwjs/cursor-productivity-extension.git"
  },
  "keywords": [
    "cursor",
    "productivity",
    "git",
    "automation"
  ],
  "author": "wwwjs <1245295089@qq.com>",
  "license": "MIT"
}
